{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "CI"
  ],
  "tasks": { 
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URL",
        "REDIS_URL",
        "RABBITMQ_URL",
        "NEXT_PUBLIC_API_URL"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
    }
  }
}